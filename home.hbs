{{!< default}}

<div class="home-slant"></div>

<div class="container">

  <div class="home__hero mt3 mb2">

    {{#page}}
    <div class="home__intro mt2">
      <div class="fs20">
        {{content}}
      </div>

      {{#if @custom.show_subscribe_form}}
      <div class="mt2 mb3">
        {{> subscribe-form-inline}}
      </div>
      {{/if}}

    </div>

    <div class="home__video">
      {{#if @custom.youtube_id}}
      <lite-youtube videoid="{{@custom.youtube_id}}"></lite-youtube>
      {{else}}
        {{#if feature_image}}
        <img src="{{img_url feature_image size="m"}}" alt="{{title}}" />
        {{/if}}
      {{/if}}
    </div>
    {{/page}}

  </div>

  <div class="home__checkout font-script fs24">
    {{@custom.callout}}
    <div class="home__arrow">
      <svg width="57" height="61" viewBox="0 0 57 61" fill="none" xmlns="http://www.w3.org/2000/svg"><g clip-path="url(#clip0)"><path d="M27.24 59.656c3.056-4.048 6.993-7.064 11.733-8.884 1.044-.403.601-2.019-.494-1.686a27.466 27.466 0 00-7.22 3.363c4.386-6.307 6.793-13.976 7.43-21.601.826-9.907-1.403-22-8.078-29.72-.977-1.136-3.166.194-2.558 1.583C30 7.16 32.27 11.285 33.525 16.038c1.242 4.705 1.793 9.525 1.53 14.385-.434 8.056-3.296 15.458-7.17 22.389-.355-2.259-1.235-4.428-2.668-6.287-1.3-1.681-4.121-.045-2.869 1.776 2.13 3.113 3.128 6.322 2.577 10.122-.167 1.186 1.416 2.426 2.317 1.233z" fill="#333" fill-opacity=".85"/></g><defs><clipPath id="clip0"><path transform="rotate(148.25 56.2 41.845)" fill="#fff" d="M56.2 41.845h35.638v49.209H56.2z"/></clipPath></defs></svg>
    </div>
  </div>

  <div class="home__topics">

    <a class="home__topic-block tc color-text nolink mt2" href="/starter-package-play-facilitators/">
      <div class="fs45 mb1"></div>
      <h2 class="mb1">PlayFacilitators(Starter Package)</h2>
      <p>Orientation material to re-resource ourselves as a Play Facilitator in a Nook care space</p>
    </a>

    <a class="home__topic-block tc color-text nolink mt2" href="/starter-package-host-a-nook/">
      <div class="fs45 mb1"></div>
      <h2 class="mb1">Hosting a Nook</h2>
      <p>Orientation materials on how we can host a Nook ourselves effectively</p>
    </a>

    <a class="home__topic-block tc color-text nolink mt2" href="/blockchain-research-reimagining-nooks-as-daos/">
      <div class="fs45 mb1"></div>
      <h2 class="mb1">Blockchain Research</h2>
      <p>Research papers on how we are re-imagining Nooks as DAO's/Nodes in a Blockchain Network</p>
    </a>

  </div>

  <div class="home__sections">

    <div class="home__explore mt4">

      <h2 class="fs32 mb1">{{t "Explore"}}</h2>

      <hr class="line mb2">

      <a href="/mentions/" class="home__explore-box nolink color-text">
        <div class="home__explore__icon fs24"></div>
        <div>
          <b>Mentions</b>
          <div class="fs14">Mentions in Blog Posts</div>
        </div>
      </a>

      <a href="/editor-speaks/" class="home__explore-box nolink color-text">
        <div class="home__explore__icon fs24"></div>
        <div>
          <b>Editor Speaks</b>
          <div class="fs14">What our editor is saying</div>
        </div>
      </a>

    </div>

    <div class="home__latest mt4">

      <h2 class="fs32 mb1">{{t "You may want to check out"}}</h2>
      
      <hr class="line mb1">

      {{#get "posts" filter="primary_tag:checkout" limit="5" include="tags,tiers"}}
        {{#foreach posts}}
          <div class="article-link">
            <div>
              <div class="fs14 color-grey b ttu">
                {{#if primary_tag}}
                {{#primary_tag}}
                  <a href="{{url}}" title="{{name}}" class="nolink">{{name}}</a>
                {{/primary_tag}}
                &ensp;
                {{/if}}
                {{> access-label icon_size=16}}
              </div>
              <a href="{{url}}" title="{{title}}" class="nolink color-text">{{title}}</a>
            </div>

          </div>
        {{/foreach}}
      {{/get}}


    </div>

  </div>
  
</div>


{{#contentFor "scripts"}}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.js" integrity="sha512-1lagjLfnC1I0iqH9plHYIUq3vDMfjhZsLy9elfK89RBcpcRcx4l+kRJBSnHh2Mh6kLxRHoObD1M5UTUbgFy6nA==" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fitvids/1.2.0/jquery.fitvids.min.js" integrity="sha512-/2sZKAsHDmHNoevKR/xsUKe+Bpf692q4tHNQs9VWWz0ujJ9JBM67iFYbIEdfDV9I2BaodgT5MIg/FTUmUv3oyQ==" crossorigin="anonymous"></script>

  <script>

  /* FitVids */
  $(document).ready(function () {
    var $postContent = $(".home__hero");
    $postContent.fitVids();
  });

  </script>
{{/contentFor}}