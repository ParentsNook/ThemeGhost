{
    "name": "ali-abdaal",
    "description": "Ali Abdaal's official Ghost theme.",
    "demo": "https://ali-abdaal-demo.superthemes.co",
    "version": "1.2.0",
    "engines": {
        "ghost": ">=5.3.0"
    },
    "author": {
        "name": "Dan Rowden",
        "email": "themes@danrowden.com",
        "url": "https://superthemes.co"
    },
    "keywords": [
        "ghost",
        "theme",
        "newsletters",
        "members",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 20,
        "custom": {
            "background_color": {
                "type": "color",
                "default": "#F8FAFC"
            },
            "enable_search": {
                "type": "boolean",
                "default": true
            },
            "youtube_url": {
                "type": "text",
                "default": "https://www.youtube.com/c/aliabdaal"
            },
            "instagram_url": {
                "type": "text",
                "default": "https://www.instagram.com/aliabdaal"
            },
            "show_subscribe_form": {
                "type": "boolean",
                "default": true,
                "group": "homepage"
            },
            "youtube_id": {
                "type": "text",
                "group": "homepage"
            },
            "callout": {
                "type": "text",
                "group": "homepage",
                "default": "Check out my Ultimate Guides"
            },
            "background_slant_height": {
                "type": "text",
                "default": "50",
                "group": "homepage"
            },
            "post_image_size": {
                "type": "select",
                "options": [
                    "Small",
                    "Large"
                ],
                "default": "Small",
                "group": "post"
            },
            "show_author": {
                "type": "boolean",
                "default": false,
                "group": "post"
            },
            "show_footer_subscribe_form": {
                "type": "boolean",
                "default": true
            },
            "footer_subscribe_form_copy": {
                "type": "text",
                "default": "Join a growing community of more than 130,000 friendly readers. Every Sunday I share actionable productivity tips, practical life advice, and high-quality insights from across the web, directly to your inbox."
            },
            "members_url": {
                "type": "text",
                "default": "/members/"
            },
            "cove_id": {
                "type": "text"
            },
            "open_external_links_in_new_tabs": {
                "type": "boolean",
                "default": true
            },
            "podcast_page_youtube_id": {
                "type": "text"
            }

        },
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "card_assets": {
            "exclude": ["bookmark", "gallery"]
        }
    }
}
